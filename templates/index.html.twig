{% extends 'base.html.twig' %}

{% block title %}Aloitelista{% endblock %}

 {% block body %}
 
    <h1>Aloitelistaus</h1>
    <table class="table table-hover">
        <thead>
            <tr>
            <th>ID</th>
            <th>Aihe</th>
            <th>Lyhyt kuvaus</th>
            <th>Tekijä</th>
            <th>PVM</th>
            <th>Toiminnot</th>
            </tr>
        </thead>
        <tbody>
            {% for aloite in aloitteet %}
                <tr>
                <th>{{ aloite.id }}</th>
                <td>{{ aloite.aihe }}</td>
                <td>{{ aloite.ote }}</td>
                <td>{{ aloite.etunimi }} {{ aloite.sukunimi }}</td>
                <td>{{ aloite.kirjauspaiva|date("d/m/Y") }}</td>
                <td>
                    <a href="{{ path('aloite_nayta', {id: aloite.id}) }}" class="btn btn-dark">Näytä</a>
                    <!-- <a href="{{ path('aloite_muokkaa', {id: aloite.id}) }}" class="btn btn-success">Muokkaa</a> -->
                    <button muokkaa-aloite="{{ aloite.id }}" class="btn btn-success muokkaa-aloite">Muokkaa</button>
                    <!-- <a href="{{ path('aloite_poista', {id: aloite.id}) }}" class="btn btn-success">Poista</a>-->
                    <button poista-aloite="{{ aloite.id }}" class="btn btn-danger poista-aloite">Poista</button>
                </td>
                </tr>
            {% endfor %}
        </tbody>

    </table>
 
 {% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="js/main.js"></script>
{% endblock %}
